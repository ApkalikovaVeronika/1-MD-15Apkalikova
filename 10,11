def task_2():
    import os
    import json
    with open("lab10.json", mode="r", encoding='utf8') as 1file:
        file = json.load(1file)
        2file = (file['products'])
        for i in range(3):
            print("Название", 2file[i]['name'])
            print("Цена", 2file[i]['price'])
            print("Вес", 2file[i]['weight'])
            if 2file[i]['available'] == True:
                print("В наличии")
            else:
                print("Нет в наличии.")
