def task_3():
    slov = {}
    with open("словарь.txt", mode="r", encoding='utf-8') as file:
        lines = file.read().splitlines()
        for line in lines:
            key, value = line.strip().split(' - ')
            slov.update({key:value})
    print(slov)

    with open('ru-en.txt', 'w', encoding='utf-8') as f:
        for rus_word, eng_word in sorted(slov.items()):
            f.write(f'{rus_word} - {eng_word}\n')
    print(slov)
