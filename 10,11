def task_2
class Restaurant:
    def __init__(self, restaurant_name, cuisine_type, rating):
        self.restaurant_name = restaurant_name
        self.cuisine_type = cuisine_type
        self.rating = rating

    def describe_restaurant(self):
        print(f"Ресторан {self.restaurant_name} основывается на кухне: {self.cuisine_type} . Рейтинг: {self.rating}")

    def open_restaurant(self):
        print(f"Ресторан {self.restaurant_name} открыт!")

    def rating(self, new_rating):
        self.rating = new_rating
        print(f"Рейтинг ресторана {self.restaurant_name} обновлен! Новый рейтинг: {self.rating}")
newRestaurant = Restaurant("Галата", "турецкая", 5)

print(newRestaurant.restaurant_name)
print(newRestaurant.cuisine_type)

newRestaurant.describe_restaurant()
newRestaurant.open_restaurant()
newRestaurant.rating(4)



restaurant1 = Restaurant("Сулико", "грузинская")
restaurant2 = Restaurant("Zoe", "французская")
restaurant3 = Restaurant("Марчеллис", "итальянская")

restaurant1.describe_restaurant()
restaurant2.describe_restaurant()
restaurant3.describe_restaurant()

